doctype html
html
  head
    title Literacy For All
    link(rel="stylesheet" href="/bower/bootstrap/dist/css/bootstrap.css")
    style.
      nav{
        background: #dec49b;
      }
      a{
        color: black;
      }
      .jumbotron{
      	background-image: url('pictures/jumbotron.jpg');
      	background-size: cover;
      	background-repeat: no-repeat;
        height: 450px;
        padding-top: 23%;
        padding-right: 22%;
      } 
      .head{
        font-size: 37px;
      }
      .body{
        font-size: 19px;
      }
      .scrolldown{
        height: 20px;
        width: 20px;
        border-radius: 50%;
      }
      .scrolldowntext{
        color: black;
      }
      #courses{
        margin-top: 90px;
      }
  body
    nav.navbar.navbar-expand-lg.navbar-light.warning-color.lighten-5
      a.navbar-brand(href='#') Rotaract Club of VIT
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item.active
            a.nav-link(href='#')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='#courses') Courses
          li.nav-item
            a.nav-link(href='#') About us
            
    .jumbotron
      .container
        b
          p.head Literacy For All
        p.body A lockdown initiative by Rotaract Club of VIT sponsored by Rotary Club of Vellore Presidency to beat the lockdown blues and learn new skills
        p.body Check out the courses offered below. 
          a(href="#courses")
            img.scrolldown(src='pictures/scrolldown.png', alt='')
        br
        br

    .container
      #courses
        //h2 Courses
      br
      .row
        each course, i in courses
          .col-md-4
            .card(style='width: 18rem;')
              a(href="/course/"+course._id)
                img.card-img-top(src= course.path, alt='Card image cap')
              .card-body
                a(href="/course/"+course._id)
                  h4= course.title
                p= course.description  
              
    br
    br
    hr
    // Footer
    footer.page-footer.font-small.indigo
      // Footer Links
      .container.text-center.text-md-left
        .row
          .col-md-3.mx-auto.text-center
            p Rotaract Club of VIT | 2020
          .col-md-2.mx-auto
          hr.clearfix.w-100.d-md-none
          .col-md-2.mx-auto
          hr.clearfix.w-100.d-md-none
          .col-md-5.mx-auto.text-center
              p Any queries related to the website, contact abc@gmail.com
          .footer-copyright.text-center.py-3
            p 
    script(src='/bower/jquery/dist/js/bootstrap.js')
    script(src='/bower/bootstrap/dist/js/bootstrap.js')
