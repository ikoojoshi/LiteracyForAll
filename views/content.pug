doctype html
html
  head
    title= title
    link(rel="stylesheet" href="/bower/bootstrap/dist/css/bootstrap.css")
    style.
      nav{
        background: #dec49b;
      }
      .mainbody{
        padding-left: 60px;
      }
    
  body
    nav.navbar.navbar-expand-lg.navbar-light.warning-color.lighten-5
      a.navbar-brand(href='#') Rotaract Club of VIT
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='../../') Home
          li.nav-item.active
            a.nav-link(href='../../#courses') Courses
          li.nav-item
            a.nav-link(href='#') About us
            
    .container-fluid.text-center
      .row.content
        .col-sm-2.sidenav   
          br
          br
          img.card-img-top(src=path, alt=path)
          br
          br
          br
          #list-example.list-group
            each c in course
              a.list-group-item.list-group-item-action(href='#'+c.content)= c.content

            
        .col-sm-8.text-left.mainbody
          br
          br
          h2= title
          br
          p= description
          br
          
          each c in course
            div(id=c.content)
              br
              h3= c.content
              br
              iframe(src="" +c.videos, width='560', height='315', frameborder='0', allowfullscreen='')
              br
              br
      
          hr
        .col-sm-2.sidenav
          br
          br
          .well
            p ADS
          .well
            p ADS

  
    br
    br
    hr
    script(src='/bower/jquery/dist/js/bootstrap.js')
    script(src='/bower/bootstrap/dist/js/bootstrap.js')  
